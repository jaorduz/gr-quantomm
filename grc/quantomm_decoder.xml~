  <name>decoder</name>
  <key>quantomm_decoder</key>
  <category>quantomm</category>
  <import>import quantomm</import>
  <make>quantomm.decoder()</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type 
  <param>
    <name>...</name>
    <key>...</key>
    <type>...</type>
  </param>

-->

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>angles</name>
    <type>int</type>
  </sink>
  <sink>
    <name>bases</name>
    <type>int</type>
  </sink>
  <sink>
    <name>ciphertext</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>feedback</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>plaintext</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
